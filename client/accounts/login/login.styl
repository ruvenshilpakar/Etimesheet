.or-text-wrapper {
  display: inline-block
  width: 100%
  line-height: 50px
  text-align: center
}

.or-text-wrapper .or-text {
  position: relative
  display: inline-block
  font-size: 14px
  font-weight: 100
  line-height: 1
  text-transform: uppercase
  color: #a0a3a6
}
.or-text-wrapper .or-text::before,
.or-text-wrapper .or-text::after {
  content: ''
  position: absolute
  bottom: 50%
  display: block
  width: 77px
  height: 1px
  background-color: #b6bdc4
}

.or-text-wrapper .or-text::after {
  right: -97px
}

.or-text-wrapper .or-text::before {
  left: -97px
}

.social-buttons {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: box;
  display: flex;
  -webkit-box-pack: distribute;
  -o-box-pack: distribute;
  -ms-flex-pack: distribute;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-orient: horizontal;
  -moz-box-orient: horizontal;
  -o-box-orient: horizontal;
  -webkit-box-lines: multiple;
  -moz-box-lines: multiple;
  -o-box-lines: multiple;
  -webkit-flex-flow: row wrap;
  -ms-flex-flow: row wrap;
  flex-flow: row wrap;
  width: 100%;
  margin: 0;
}

.social-buttons span {
  display: none;
}

.social-buttons .social-icon > .mdl-js-button {
  display  block
  text-align  left
  padding  5px
  width  100px
  border-radius  3px
  -webkit-transition  background 0.3s
  transition  background 0.3s
}

.social-buttons .social-icon > .mdl-js-button .fa {
  color  #fff
  font-size  14px
  width  100%
  line-height  30px
  text-align  center
  margin  0
}

.social-buttons .social-fb button {
  background-color: #3b5998;
}

.social-buttons .social-fb button:hover {
  background-color: rgba(59,89,152,0.8);
}

.social-buttons .social-tw button {
  background-color: #00aced;
}

.social-buttons .social-tw button:hover {
  background-color: rgba(0,172,237,0.8);
}

.social-buttons .social-gp button {
  background-color: #dd4b39;
}

.social-buttons .social-gp button:hover {
  background-color: rgba(221,75,57,0.8);
}


ul
  &.social-buttons
    list-style none
    text-align center
    padding 0
    li
      display inline
      font-size 14px
      margin 3px
      cursor pointer
      text-decoration none
