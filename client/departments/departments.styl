.newFormBtn
  font-size:20px
  padding:10px
  background: #2C608E
  color: #fff
  text-align: center
  border: 0
  transition: all 0.3s ease 0s

.newFormBtn:hover
  background:#428BCA

.saveFormBtn,.cancelFormBtn
  font-size:14px
  padding:10px
  background: #2C608E
  color: #fff
  text-align: center
  border: 0
  transition: all 0.3s ease 0s
  margin: 1px 5px

.saveFormBtn:hover
  background:green

.cancelFormBtn:hover
  background:red
